{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"],
			"components/*": ["./src/components/*"],
			"lib/*": ["./src/lib/*"],
			"hooks/*": ["./src/hooks/*"],
			"ui/*": ["./src/components/ui/*"],
			"styles/*": ["./src/styles/*"],
			"utils/*": ["./src/utils/*"],
			"types/*": ["./src/types/*"],
			"contexts/*": ["./src/contexts/*"],
			"services/*": ["./src/services/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/app/fonts/*.otf"
	],
	"exclude": ["node_modules"]
}
